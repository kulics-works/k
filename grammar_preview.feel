def Void();

def Color {
    of Red | Green | Blue;
};

def Point(x Int, y Int);

def Pair[T1, T2](first T1, second T2);

def List[T] {
    of None | Cons(value T);
};

def Option[T] {
    of Some | None
};

def Some[T](value T) Option[T];

def None[T]() Option[T];

let a Option[Int] = Some(1);
when a 
is Some(v) then print(v)
is None _ then print("none");

// operator override
def MyList[T Any](arr Array[T]) Addable[T] & MutIndexable[T] {
    // a + e
    plus(element T) Void = {
        arr = arr.append(element);
    };
    // e = a.(i)
    get(index Int) T = arr.get(index);
    // a.(i) = e
    set(index Int, element T) Void = {
        arr.set(index, element);
    };
};

// Iterator pattern
def Iterator[T Any] {
    next() Option[T];
};

def Iterable[T Any] {
    iter() Iterator[T];
};

def List[T Any] of Nil | Cons {
    iter() Iterator[T] = ListIterator(this);
};

def Nil[T Any]() List[T];
def Cons[T Any](head T, tail List[T]) List[T];

def ListIterator[T Any](mut li List[T]) {
    next() Option[T] = if li is Cons(h, t) then {
        li = t;
        Some(h)
    } else {
        None()
    };
};

