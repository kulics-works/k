given(T: ToString) Option(T) with {
    toString(this): String = 
        if this is Some(v)
            then "Some(\{v})" 
            else "None()";
}

given Foo: ToString with {
    toString(this): String = "foo";
}
given(T, R) (T)->R with {
    toAny(this): Any = this;
}

type LinkedList(T) = {
    Cons(head: T, tail: LinkedList(T)),
    Empty(),
}

given(T) LinkedList(T) with {
    new(): This = Empty();
}

given(T) List(T) with {
    new(): This;

    get(this, index: Int): T;

    set(this, index: Int, element: T): Void;
}

type ArrayList(T) = { ArrayList(_arr: Array(T)) }
type ArrayList(T)(_arr: Array(T));

given(T) ArrayList(T) with {
    new(): This = This([]);

    get(this, index: Int): T = this._arr.get(index);

    set(mut this, index: Int, element: T): Void = this._arr.set(index, element);

    map(R)(this, f: (T)->R): Iterator(R) = MapIter(T, R)(this, f);
}

given ArrayList(Int) with {
    sum(this): Int = reduce(this.iterator(), 0, fn(l, r) = l + r);
}

