def Foo = case(value Int);

def Foo = {
    plus(rhs Int) Foo = Foo(this.value + rhs);
    
    plusAssign(rhs Int) Void = {
        this.value = this.value + rhs;
    };
};

def I[T Any] = interface {
    plus(rhs T) T;
    plusAssign(rhs T) Void;
};

let f[T I[Int]](v Int) T = {
    let a T = T:new();
    let mut b T = a.plus(v);
    b += v;
    b
};

