}

given(T: ToString) ArrayList(T): ToString with {
    toString(this): String = join_String(this.iterator());
}

given Int with {
    default(): This = 0;
}

given String with {
    default(): This = "";
}

given(T) Array(T) with {
    default(): This = arrayOf(T)();
}

